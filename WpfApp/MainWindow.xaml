<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSameThread" Content="Run on same thread" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="50" Width="144" Click="btnSameThread_Click"/>
        <TextBox x:Name="txtText" HorizontalAlignment="Left" Height="414" Margin="490,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="300" AcceptsReturn="True"/>
        <Button x:Name="btnDifferentThread" Content="Run on different Thread" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" Width="144" Height="61" Click="btnDifferentThread_Click"/>
        <Button x:Name="btnThrowException" Content="This will throw Exception" HorizontalAlignment="Center" Margin="0,193,0,0" VerticalAlignment="Top" Height="57" Width="144" Click="btnThrowException_Click"/>

    </Grid>

</Window>
